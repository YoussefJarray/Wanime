{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/dist/assets/(.*)",
      "dest": "/dist/assets/$1"
    },
    {
      "src": "/dist/(.*\\.css)",
      "headers": {
        "Content-Type": "text/css"
      },
      "dest": "/dist/$1"
    },
    {
      "src": "/dist/(.*\\.js)",
      "headers": {
        "Content-Type": "application/javascript"
      },
      "dest": "/dist/$1"
    }
  ]
}
